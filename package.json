{
  "name": "stack-overflow-pwa",
  "version": "1.0.0",
  "description": "A PWA for Stack Overflow content.",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run static && npm run css && npm run rollup && npm run workbox",
    "clean": "rimraf build",
    "css": "postcss --output build/styles.css src/styles.css",
    "deploy": "npm run build && firebase deploy --only hosting,functions",
    "lint": "eslint --ext='.js,.mjs' .",
    "rollup": "rollup --config rollup.config.mjs",
    "serve": "npm run build && firebase serve --only hosting,functions",
    "static": "cpx 'src/static/**' build",
    "workbox": "workbox injectManifest"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeffposnick/application-shell.git"
  },
  "author": "Jeff Posnick",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jeffposnick/application-shell/issues"
  },
  "homepage": "https://github.com/jeffposnick/application-shell#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cpx": "^1.5.0",
    "cssnano": "^4.0.0-rc.2",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-header": "^1.2.0",
    "firebase-tools": "^3.18.3",
    "postcss-cli": "^5.0.0",
    "postcss-css-variables": "^0.8.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-string": "^2.0.2",
    "workbox-cli": "^3.1.0"
  }
}
